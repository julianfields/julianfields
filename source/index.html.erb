---
pageable: true
per_page: 1
---

<% page_articles.each_with_index do |article, i| %>
  <div class="hero">
    <header>
      <H1><%= article.title %></H1>
      <h2><%= article.data.subtitle %></h2>
    </header>
    <% if article.data.post_image_url? %>
      <img src="<%= article.data.post_image_url %>"/>
    <% else %>
      <img src="/images/painting.jpg"/>
    <% end %>

  </div>
  <div class="row">
    <div class="large-9 columns large-centered">
      <div class="article">
        <!-- use article.summary(250) if you have nokogiri available to show just
             the first 250 characters -->
        <%= article.body %>
      </div>
    </div>
  </div>
<% end %>

<% if paginate %>
  <div class="pagination">
    <% if prev_page %>
      <%= link_to 'Previous Article', prev_page, class: "previous-page" %>
    <% end %>
  <% end %>

  <% if paginate %>
    <% if next_page %>
      <%= link_to 'Next Article', next_page, class: "next-page" %>
    <% end %>
  </div>
<% end %>
